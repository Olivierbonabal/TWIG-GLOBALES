<body>

<h1>Bonjour {{ name }} !</h1>

{% set products = [] %}
{% for product in products %}
    {% if product not in products %}
        {% set products = products|merge([product]) %}
    {% endif %}
{% endfor %}

{% for product in products %}
   {{ product }}
{% endfor %}

<pre>
{{ dump(products) }}
</pre>

</body>
